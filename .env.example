# GAFF Environment Configuration Template
# Copy to .env and fill in your values

# LLM Provider Keys
WRITER_API_KEY=your-writer-api-key-here
AZURE_OPENAI_KEY=your-azure-openai-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Azure
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Marriott APIs
MARRIOTT_API_KEY=your-marriott-api-key
MARRIOTT_API_BASE_URL=https://api.marriott.com

# MCP Memory
MEMORY_MCP_ENABLED=true
MEMORY_MCP_URL=http://localhost:3100

# Logging
LOG_LEVEL=info
AZURE_APP_INSIGHTS_KEY=your-app-insights-key
